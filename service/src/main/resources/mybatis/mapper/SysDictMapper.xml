<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jay.vito.uic.domain.SysDictMapper">
    <sql id="ColumnList">
      s.id,
      s.name,
      s.code,
      s.label
    </sql>
    <sql id="WhereClause">
        <where>
            <if test="name != null and name != ''">
              and s.name = #{name}
            </if>
        </where>
    </sql>

    <select id="selectList" resultType="map" parameterType="map">
        select
        <include refid="ColumnList"/>
        from sys_dict s
        <include refid="WhereClause"/>
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
    </select>

    <select id="countList" resultType="java.lang.Long" parameterType="map">
        select count(1) from sys_dict s
        <include refid="WhereClause"/>
    </select>



</mapper>

